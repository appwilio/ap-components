.collapse
    &__content
        overflow: hidden
        height: 0;
        opacity: 0
        transition: all 0.5s ease-out;
    &__header
        position: relative
        overflow: hidden
        cursor: default
    &__tick
        cursor: pointer
        position: absolute;
        right: 10px
        top: 10px
        transition: transform 0.1s ease-out 0s;
        font-size: 1.3rem;
        line-height: 26px;
    &_opened
        > .collapse
            &__content
                visibility: visible
                opacity: 1
                height: auto;
            &__header .collapse__tick
                transform: rotate(-180deg);
