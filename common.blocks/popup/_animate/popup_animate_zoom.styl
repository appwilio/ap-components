.popup_animate_zoom
    animation-duration: .3s;
    animation-fill-mode: both;
    animation-play-state: running;
    &.popup_direction_bottom-center
        animation-name: zoomOut
        &.popup_visible
            animation-name: zoomIn
    &.popup_direction_top-center
        animation-name: zoomOut
        &.popup_visible
            animation-name: zoomIn
